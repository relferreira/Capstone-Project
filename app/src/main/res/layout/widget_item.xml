<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_item_padding">
    <ImageView
        android:id="@+id/widget_item_image"
        android:layout_width="@dimen/widget_item_imageSize"
        android:layout_height="@dimen/widget_item_imageSize"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/widget_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_item_text_marginLeft"
        android:layout_marginStart="@dimen/widget_item_text_marginLeft"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        tools:text="New commit"/>
</RelativeLayout>