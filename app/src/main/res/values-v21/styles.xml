<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme">
        <item name="android:windowExitTransition">@transition/main_exit</item>
    </style>

    <style name="AppTheme.Detail" parent="@style/AppTheme">
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_return</item>
    </style>

</resources>